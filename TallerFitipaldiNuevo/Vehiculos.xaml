<Window x:Class="TallerFitipaldiNuevo.Vehiculos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TallerFitipaldiNuevo"
        mc:Ignorable="d"
        Title="Vehiculos" Height="936" Width="1342" Icon="/img/icon.png" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" InputScope="Default">
    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <ImageBrush ImageSource="/img/fondoTalleresFitipaldi.jpg"/>
        </Grid.Background>
        <Rectangle x:Name="rect_filtro" HorizontalAlignment="Left" Height="354" Margin="770,503,0,0" Stroke="White" VerticalAlignment="Top" Width="298" Fill="Black" Opacity="0.5" RadiusX="10" RadiusY="10" StrokeThickness="2"/>
        <Rectangle HorizontalAlignment="Left" Height="303" Margin="280,138,0,0" Stroke="White" VerticalAlignment="Top" Width="490" Fill="Black" Opacity="0.5" RadiusX="10" RadiusY="10" StrokeThickness="2"/>
        <DataGrid x:Name="VehiculosDataGrid" IsReadOnly="True" ColumnWidth="111" AutoGenerateColumns="False" Margin="279,502,464,48" MaxWidth="600">
            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridCell}">
                    <Setter Property="Background" Value="#333333"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <Setter Property="FontSize" Value="12"/>
                    <Setter Property="BorderBrush" Value="#FFFFFF"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="Opacity" Value="70"/>
                </Style>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="Background" Value="#222222"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="BorderBrush" Value="#FFFFFF"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Editar" Click="MenuItemEditar_Click"/>
                    <MenuItem Header="Eliminar" Click="MenuItemEliminar_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property= "Height" Value= "30"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Matrícula" Binding="{Binding Matricula}" />
                <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" />
                <DataGridTextColumn Header="Marca" Binding="{Binding Marca}" />
                <DataGridTextColumn Header="Modelo" Binding="{Binding Modelo}" />
                <DataGridTextColumn Header="ID Cliente" Binding="{Binding ClienteId}" />
            </DataGrid.Columns>
        </DataGrid>
        <GridSplitter HorizontalAlignment="Left" Height="306" Margin="525,100,0,0" VerticalAlignment="Top" Width="2" RenderTransformOrigin="0.5,0.5">
            <GridSplitter.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.628" ScaleY="1.593"/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </GridSplitter.RenderTransform>
        </GridSplitter>
        <Label Content="Busca vehículo por matrícula" HorizontalAlignment="Left" Margin="304,151,0,0" VerticalAlignment="Top" Width="442" Height="38" FontWeight="Bold" FontSize="20" Foreground="White" HorizontalContentAlignment="Center"/>
        <Button x:Name="bt_buscar_vehiculo_por_matricula" Content="Buscar" HorizontalAlignment="Left" Height="36" Margin="564,194,0,0" VerticalAlignment="Top" Width="148" Background="#FF191919" Foreground="White" BorderBrush="White" BorderThickness="2,2,2,2" Click="bt_buscar_vehiculo_matricula_Click" FontSize="15">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBox x:Name="tb_matricula_buscar" HorizontalAlignment="Left" Margin="308,198,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="216" Height="28" FontSize="15" VerticalContentAlignment="Center" TabIndex="1" KeyDown="buscar_vehiculo"/>
        <TextBox x:Name="tb_matricula_vehiculo" HorizontalAlignment="Left" Margin="308,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124" Height="27" FontSize="15" VerticalContentAlignment="Center" TabIndex="1" KeyDown="crear_editar_vehiculo"/>
        <TextBox x:Name="tb_marca_vehiculo" HorizontalAlignment="Left" Margin="468,290,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="270" Height="27" FontSize="15" VerticalContentAlignment="Center" TabIndex="1" KeyDown="crear_editar_vehiculo"/>
        <TextBox x:Name="tb_modelo_vehiculo" HorizontalAlignment="Left" Margin="308,347,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" Height="28" FontSize="15" VerticalContentAlignment="Center" TabIndex="1" KeyDown="crear_editar_vehiculo"/>
        <TextBox x:Name="tb_id_cliente_vehiculo" HorizontalAlignment="Left" Margin="648,347,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="90" Height="28" FontSize="15" VerticalContentAlignment="Center" TabIndex="1" KeyDown="crear_editar_vehiculo"/>
        <Label Content="Matricula" HorizontalAlignment="Left" Margin="308,265,0,0" VerticalAlignment="Top" FontSize="13" Foreground="White" Width="94" Height="25"/>
        <Label Content="Marca" HorizontalAlignment="Left" Margin="468,265,0,0" VerticalAlignment="Top" FontSize="13" Foreground="White" Width="68" Height="25"/>
        <Label Content="Modelo" HorizontalAlignment="Left" Margin="308,322,0,0" VerticalAlignment="Top" FontSize="13" Foreground="White" Width="82" Height="25"/>
        <Label x:Name="lbl_id_cliente_vehiculo" Content="Id cliente" HorizontalAlignment="Left" Margin="648,322,0,0" VerticalAlignment="Top" FontSize="13" Foreground="White" IsEnabled="False" Width="90" Height="25"/>
        <Button x:Name="bt_crear_editar_vehiculo" Content="Crear" HorizontalAlignment="Left" Height="28" Margin="322,393,0,0" VerticalAlignment="Top" Width="176" Background="#FF191919" Foreground="White" BorderBrush="White" BorderThickness="2,2,2,2" Click="bt_crear_editar_Click" FontSize="15">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Button x:Name="bt_cancelar" Content="Cancelar" HorizontalAlignment="Left" Height="28" Margin="552,393,0,0" VerticalAlignment="Top" Width="176" Background="#FF191919" Foreground="White" BorderBrush="White" BorderThickness="2,2,2,2" Click="bt_cancelar_operacion_Click" FontSize="15">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Rectangle x:Name="rect_clientes_id" HorizontalAlignment="Left" Height="302" Margin="832,138,0,0" Stroke="White" VerticalAlignment="Top" Width="236" Fill="Black" Opacity="0.5" RadiusX="10" RadiusY="10" StrokeThickness="2"/>
        <GridSplitter x:Name="linea_cliente_id" HorizontalAlignment="Left" Height="128" Margin="948,275,0,0" VerticalAlignment="Top" Width="4" RenderTransformOrigin="0.5,0.5">
            <GridSplitter.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.541" ScaleY="1.848"/>
                    <SkewTransform/>
                    <RotateTransform Angle="90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </GridSplitter.RenderTransform>
        </GridSplitter>
        <Label x:Name="lbl_busca_id_cliente" Content="Busca Id de&#xA;   Cliente" HorizontalAlignment="Left" Margin="862,151,0,0" VerticalAlignment="Top" Width="176" Height="64" FontWeight="Bold" FontSize="20" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tb_buscar_username" HorizontalAlignment="Left" Margin="862,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="176" Height="28" FontSize="15" VerticalContentAlignment="Center" TabIndex="1" KeyDown="id_cliente_por_username"/>
        <Button x:Name="bt_buscar_id_usuario_por_username" Content="Buscar" HorizontalAlignment="Left" Height="27" Margin="896,288,0,0" VerticalAlignment="Top" Width="106" Background="#FF191919" Foreground="White" BorderBrush="White" BorderThickness="2,2,2,2" Click="bt_buscar_id_por_username_Click" FontSize="15">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBox x:Name="tb_id_cliente_buscado" IsReadOnly="True" HorizontalAlignment="Left" Margin="906,373,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="88" Height="28" FontSize="15" VerticalContentAlignment="Center" TabIndex="1"/>
        <Label x:Name="lbl_id_buscar" Content="Id" HorizontalAlignment="Left" Margin="906,349,0,0" VerticalAlignment="Top" FontSize="13" Foreground="White" IsEnabled="False" Width="88" Height="25"/>
        <Label x:Name="lbl_username" Content="Nombre de usuario" HorizontalAlignment="Left" Margin="862,217,0,0" VerticalAlignment="Top" FontSize="13" Foreground="White" IsEnabled="False" Width="150" Height="25"/>
        <Label x:Name="titulo" Content="VEHÍCULOS" HorizontalAlignment="Left" VerticalAlignment="Top" Height="93" Width="545" Margin="36,21,0,0" VerticalContentAlignment="Center" FontWeight="Bold" FontSize="55" Foreground="White"/>
        <ComboBox x:Name="cb_tipo" HorizontalAlignment="Left" Margin="488,347,0,0" VerticalAlignment="Top" Width="130" Height="28" FontSize="15" Foreground="Black">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="White"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <Label x:Name="lbl_tipo" Content="Tipo" HorizontalAlignment="Left" Margin="488,322,0,0" VerticalAlignment="Top" FontSize="13" Foreground="White" IsEnabled="False" Width="92" Height="25"/>
        <Label x:Name="lbl_filtro" Content="Filtrar vehículos &#xD;&#xA;por nombre de&#xD;&#xA;usuario" HorizontalAlignment="Left" Margin="894,515,0,0" VerticalAlignment="Top" Width="164" Height="121" FontWeight="Bold" FontSize="20" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox x:Name="tb_filtrar_por_username" HorizontalAlignment="Left" Margin="897,671,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="150" Height="33" FontSize="15" VerticalContentAlignment="Center" TabIndex="1" KeyDown="id_filtrar_por_username"/>
        <Button x:Name="bt_filtrar_por_username" Content="Filtrar" HorizontalAlignment="Left" Height="32" Margin="919,726,0,0" VerticalAlignment="Top" Width="106" Background="#FF191919" Foreground="White" BorderBrush="White" BorderThickness="2,2,2,2" Click="bt_filtrar_por_username_Click" FontSize="15">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <Label x:Name="lbl_username_Copy" Content="Nombre de usuario" HorizontalAlignment="Left" Margin="897,641,0,0" VerticalAlignment="Top" FontSize="13" Foreground="White" IsEnabled="False" Width="150" Height="30"/>
        <Button x:Name="bt_reestablecer_tabla" Content="Reestablecer" HorizontalAlignment="Left" Height="32" Margin="919,779,0,0" VerticalAlignment="Top" Width="106" Background="#FF191919" Foreground="White" BorderBrush="White" BorderThickness="2,2,2,2" Click="bt_reestablecer_Click" FontSize="15">
            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="Red"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
